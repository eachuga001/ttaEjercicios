<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="eus.ehu.tta.practica1.NuevoTestActivity"
    android:orientation="vertical"
    android:id="@+id/layoutNuevoTestActivity">

    <TextView
        android:id="@+id/tvPreguntaTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:id="@+id/rgOpcionesTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </RadioGroup>

    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stringBtnEnviar"
        android:visibility="invisible"
        android:onClick="clickEnviar"/>

    <Button
        android:id="@+id/btnVerAyuda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stringBtnVerAyuda"
        android:visibility="invisible"
        android:onClick="clickVerAyuda"/>

    <TextView
        android:id="@+id/tvRespuestaTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
